<!-- This is CSS that is being tested on different pages. It's being added to certain pages. If the css rule passes, it'll be added to the global site-css file */ -->

style.
	
	h1, .h1, h2, .h2, h3, .h3, h4, .h4, h5, .h5, h6, .h6 {
		font-family: var(--default-font) !important;
		text-transform: none;
	}

	li, a, p {
		font-family: var(--default-font);
	}

	h1, .h1 {
		font-size: 6rem;
		line-height: 1.1em;
		font-weight: 700 !important;
		letter-spacing: -1.5;
	}

	h2, .h2 {
		font-size: 3.75rem;
		line-height: 1.1em;
		font-weight: 700 !important;
		letter-spacing: -0.5;
	}

	h3, .h3 {
		font-size: 3rem;
		line-height: 1.25em;
		font-weight: 700 !important;
		letter-spacing: 0;
	}

	h4, .h4 {
		font-size: 2.125rem;
		line-height: 1.25em;
		font-weight: 700 !important;
		letter-spacing: 0.25;
	}

	h5, .h5 {
		font-size: 1.5rem;
		line-height: 1.25em;
		font-weight: 700 !important;
		letter-spacing: 0;
	}

	h6, .h6 {
		font-size: 1.25rem;
		line-height: 1.25em;
		font-weight: 700 !important;
		letter-spacing: 0.15;
	}

	p {
		font-size: 1rem;
		line-height: 1.5em;
	}

	li, a, .nan-btn-primary {
		font-size: 0.875rem;
		line-height: 1em;
	}
	.caption {
		font-size:0.875rem;
		line-height:1.5em;
		opacity: 0.8;
	}
