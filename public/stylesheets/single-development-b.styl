.single-development__imageGrid--outer
	margin-bottom 100px
.single-development__imageGrid__image--lightbox
	display none
	position fixed
	z-index 999
	width 100%
	height 100%
	text-align center
	top 0
	left 0
	background rgba(0,0,0,0.8)
	img
		max-width 90%
		max-height 80%
		margin-top 2%
	&:target
		outline none
		display flex
		justify-content center
		align-items center
	&:hover
		opacity 1 !important





#single-development-landing-page
	h1
		margin-top 50px
		text-align center
	h2
		font-size: var(--h3-size)
.single-development__mainImage
	margin-top 50px
	background-size cover
	height 600px
	width 100%
.single-development__imageGrid--inner
	display flex
	justify-content space-between
	.single-development__imageGrid__image
		background-size cover
		width 100%
		height 150px
.single-development__content
	display flex
	justify-content space-between
	align-items center
	margin-bottom 100px
	h2
		margin-bottom 30px
	.single-development__content__details__features
		display flex
		justify-content space-between
		margin-bottom 30px
		.single-development__content__details__features__item
			background-color alpha(#A2AAAD, 10%)
			h3
				text-align center
				font-size var(--h4-size)
				margin-bottom 5px
			p
				text-align center
				font-size 14px
	.single-development__content__location
		display flex
		align-items center
		p
			padding-left 20px
			color var(--light-gray)
			margin 0 !important
	.single-development__content__map
		padding 0 !important