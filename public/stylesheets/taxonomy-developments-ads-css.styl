position-sticky()
	position -webkit-sticky
	position sticky
display-grid()
	display -ms-grid
	display grid
display-flex()
	display -webkit-box
	display -webkit-flex
	display -ms-flexbox
	display flex
justify-content(args)
	-webkit-box-pack args
	-webkit-justify-content args
	-ms-flex-pack args
	justify-content args
flex-wrap(args)
	-webkit-flex-wrap args
	-ms-flex-wrap args
	flex-wrap args
align-items(args)
	-webkit-box-align args
	-webkit-align-items args
	-ms-flex-align args
	align-items args

#developments-landing-page
	*
		box-sizing border-box
	p
		font-size 15px
		color #666666
	h3
		font-size 25px
	h4
		font-size 18px

#developments-intro
	margin-bottom 100px

	.incentives-title
		width 50vw
		margin auto
		text-align center
	.incentives-wrapper
		display-flex()
		justify-content(center)
		align-items(start)
		flex-wrap(wrap)
		.incentives-wrapper__item
			// width 33%
			padding 20px
			h3,
			p
				text-align center
	.cta-button
		margin auto
		text-align center
		a
			text-decoration none


.developments-city
	position relative
	display-flex()
	flex-wrap(wrap)
	.developments-city__name
		width 100%
		display block
		margin-bottom 50px
		padding-bottom 50px
		border-bottom 1px solid var(--orange);
	.development-city-map
		// position-sticky()
		// width 40%
		h3
			font-size 18px !important
			color #999999
			letter-spacing 1px
	.development-details
		// width 60%
		display-flex()
		flex-wrap(wrap)
		img
			max-width 100%
		.development__img-container
			position relative
			.sold-banner
				position absolute
				top -10px
				left -10px
				background-color red
				color white
				font-size 25px
				text-transform uppercase
				padding 15px 20px
	.development__info--area
		font-size 10px
		padding-top 10px
	.development__info--price
		color #333
		text-transform uppercase
		margin-bottom 10px
	.development__info
		padding-bottom 50px
		margin-bottom 100px
		// border-bottom 1px solid var(--light-gray)
		p.sorry-sold
			color #333 !important
			font-weight 700 !important
			text-decoration underline
#developments-areas
	padding-bottom 100px
	.developments-areas__list
		display-flex()
		flex-wrap(wrap)
		a
			display-flex()
			flex-wrap(wrap)
			justify-content(center)
			align-items center
			h3
				text-align center
				background-color #fafafa
				padding 20px
				width 100%
			&:hover
				h3
					background-color var(--orange)
					color white
					transition(.2s all ease-in-out)

#developments-listings
	clear both

@media (max-width: 599px)
	#developments-landing-page
		.incentives-title,
		.incentives-wrapper__item
			width 100% !important
	.development-city-map
		display none !important